<% provide(:title, "Blog |") %>

<div class="container">
  <!--Section 1 Blog -->
  <div id="section-1-app">
    <h1>Anuncios y Noticias</h1>
    <h4>Mantente al d√≠a con todas las noticias de AprendeRails</h4>
  </div>

  <div class="line-section"></div>

  <!-- Section 2 Blog -->
  
  <%= link_to "New Post", new_post_path%>

  <%= will_paginate @posts, class: "text-center" %>

  <% @posts.each do |post| %>
    <div class="row blog-row center-align">
      <div class="col-md-8 col-md-offset-2 well blog-well">
        
        <h2 class="blog-title"><%= link_to post.title, post  %></h2>
        <h4><em>Publicado <%= l(post.created_at, format: "%d de %B, %Y")%></em></h4>

        <hr>

        <p class="blog-content">
          <%= truncate(post.content, length: 100, omission: "...(continuado)") %>
        </p>
      </div>
    </div>
  <% end %>
  
</div>
