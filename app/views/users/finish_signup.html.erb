<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <br>
      <br>
      <h2>Confirma tu email para continuar</h2>

      <br>

      <%= form_for(current_user, as: 'user', url: finish_signup_path(current_user)) do |f| %>
        <% if @show_errors && current_user.errors.any? %>
          <h2> Errores encontrados:</h2>
          <ul>
            <% current_user.errors.full_messages.each do |msg| %>
              <li><%= msg %> </li>
            <% end %> 
          </ul>
        <% end %>

        <div>
          <%= f.email_field :email, autofocus: true, value: '', placeholder: 'email@ejemplo.com', class: 'form-control' %>
        </div>  

        <br>
        <div>
          <%= f.submit 'Confirmar', class: "btn btn-default" %>
        </div>

      <% end %>

    </div>
  </div>
</div>

